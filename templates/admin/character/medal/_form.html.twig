{# templates\admin\character\medal\_form.html.twig #}
{{ form_start(form) }}
    <div class="row">

        <div class="col-8">

            <div class="row">
                <div class="col-6">
                    {{ form_row(form.name) }}
                </div>
                <div class="col-2">
                    {{ form_row(form.abbreviation) }}
                </div>
                <div class="col-2">
                    {{ form_row(form.type) }}
                </div>
                <div class="col-2">
                    {{ form_row(form.category) }}
                </div>
            </div>
            
            <div class="row">
            
                <div class="col-12">
                    {{ form_row(form.description) }}
                </div>

            </div>

            <div class="row">
            
                <div class="col-3   ">
                    {{ form_row(form.value) }}
                </div>
                
                <div class="col-3   ">
                    {{ form_row(form.coeficientXp) }}
                </div>

            </div>

        </div>

        <div class="col-4">
            {{ form_row(form.pictureFile) }}
            {% if not medal.picture or medal.picture == '' %}
                <img src="{{ asset('images/characters/medals/default.png') }}" alt="image par defaut - Médaille" />
            {% else %}
                {% set iden = medal.name ~ ' [' ~ medal.abbreviation ~ ']' %}
                <a href="" />
                    <img src="{{ vich_uploader_asset(medal) }}" alt="{{ iden }}" />
                </a>
            {% endif %}
            {{ form_row(form.ribbon) }}
            {% if not medal.ribbon or medal.ribbon == '' %}
                <img src="{{ asset('images/characters/medals/ribbons/default.png') }}" alt="image par defaut - Réduction" />
            {% else %}
                {% set iden = medal.name ~ ' [' ~ medal.abbreviation ~ ']' %}
                <a href="" />
                    <img src="{{ vich_uploader_asset(medal) }}" alt="{{ iden }}" />
                </a>
            {% endif %}
        </div>

    </div>

    <div class="row">
        <div class="col-12">
            <button class="btn btn-primary">{{ button }}</button>
        </div>
    </div>
{{ form_end(form) }}