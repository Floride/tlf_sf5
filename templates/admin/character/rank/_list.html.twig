{# templates\admin\character\rank\_list.html.twig #}
{% trans_default_domain 'forms' %}
<div class="row">
    <div class="col-12">
    
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="text-bold">Nom</th>

                    <th class="text-bold">Abréviation</th>
                    
                    <th class="text-bold">Type</th>

                    <th class="text-bold">Catégorie</th>

                    <th class="text-bold text-center">Action</th>
                <tr>
            </thead>
            <tbody>
            {% for rank in ranks %}
                <tr>
                    <td>{{ rank.name }}</td>

                    <td>{{ rank.abbreviation }}</td>
                    
                    <td>
                        {% for key, type in constant('TYPE', rank) %}
                            {% if rank.type == key %}
                                {{ type|trans }}
                            {% endif %}
                        {% endfor %}
                    </td>

                    <td>
                        {% for key, category in constant('CATEGORY', rank) %}
                            {% if rank.category == key %}
                                {{ category|trans }}
                            {% endif %}
                        {% endfor %}
                    </td>

                    <td class="text-center">

                        {% include "admin/character/rank/_action.html.twig" %}

                    </td>
                <tr>
            {% else %}
                <tr><td colspan="4" class="text-center">- Aucun enregistrement -</td></tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
</div>

{% for rank in ranks %}
    
    {% include "admin/character/rank/_modal.html.twig"  with {'title': 'rank' ~ rank.id } %}

{% endfor %}