{# templates\admin\character\feature\_action.html.twig #}
<a href="{{ path('admin_character_feature_edit', {id: feature.id}) }}" class="btn btn-sm btn-primary">
    <i class="far fa-edit" title="Editer"></i>
</a>
<button type="button" class="btn btn-sm btn-warning" data-toggle="modal" data-target="#feature{{ feature.id }}">
    <i class="far fa-eye" title="Visualiser"></i>
</button>

<form action="{{ path('admin_character_feature_delete', {id: feature.id}) }}" 
    method="POST" id="delete_form_{{ feature.id }}" class="form_delete"
    onSubmit="return confirm('Êtes-vous sur de vouloir supprimer cette caractéristique ?')"
/>

    <button type="submit" class="btn btn-sm btn-danger" id="submit_btn_{{ feature.id }}">
        <i class="far fa-trash-alt" title="Supprimer"></i>
    </button>
    <input type="hidden" id="method_{{ feature.id }}" name="_method" value="DELETE" />
    <input type="hidden" id="token_{{ feature.id }}" name="_token" value="{{ csrf_token('admin_character_feature_delete_' ~ feature.id) }}" />
</form>