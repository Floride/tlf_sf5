{# templates\admin\character\skill\_list.html.twig #}
{% trans_default_domain 'forms' %}
<div class="row">
    <div class="col-12">
    
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="text-bold">Nom</th>

                    <th class="text-bold">Abr√©viation</th>
                    
                    <th class="text-bold">Type</th>

                    <th class="text-bold text-center">Action</th>
                <tr>
            </thead>
            <tbody>
            {% for skill in skills %}
                <tr>
                    <td>{{ skill.name }}</td>

                    <td>{{ skill.abbreviation }}</td>
                    
                    <td>
                        {% for key, type in constant('TYPE', skill) %}
                            {% if skill.type == key %}
                                {{ type|trans }}
                            {% endif %}
                        {% endfor %}
                    </td>

                    <td class="text-center">

                        {% include "admin/character/skill/_action.html.twig" %}

                    </td>
                <tr>
            {% else %}
                <tr><td colspan="4" class="text-center">- Aucun enregistrement -</td></tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
</div>

{% for skill in skills %}
    
    {% include "admin/character/skill/_modal.html.twig"  with {'title': 'skill' ~ skill.id } %}

{% endfor %}