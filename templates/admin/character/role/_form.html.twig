{# templates\admin\character\role\_form.html.twig #}
{{ form_start(form) }}
    <div class="row">

        <div class="col-8">

            <div class="row">
                <div class="col-6">
                    {{ form_row(form.name) }}
                </div>
                <div class="col-3">
                    {{ form_row(form.abbreviation) }}
                </div>
                <div class="col-3">
                    {{ form_row(form.type) }}
                </div>
            </div>
            
            <div class="row">
            
                <div class="col-12">
                    {{ form_row(form.description) }}
                </div>

            </div>

            <div class="row">

                <div class="col-6">
                    {{ form_row(form.accreditationMin) }}
                </div>

                <div class="col-3">
                    {{ form_row(form.rankMin) }}
                </div>

                <div class="col-3">
                    {{ form_row(form.rankMax) }}
                </div>

            </div>

        </div>

        <div class="col-4">
            {{ form_row(form.pictureFile) }}
            {% if not role.picture or role.picture == '' %}
                <img src="{{ asset('images/characters/badges/roles/default.png') }}" alt="image par defaut - Fonction" />
            {% else %}
                {% set iden = role.name ~ ' [' ~ role.abbreviation ~ ']' %}
                <a href="" />
                    <img src="{{ vich_uploader_asset(role) }}" alt="{{ iden }}" />
                </a>
            {% endif %}
        </div>

    </div>

    <div class="row">
        <div class="col-12">
            <button class="btn btn-primary">{{ button }}</button>
        </div>
    </div>
{{ form_end(form) }}