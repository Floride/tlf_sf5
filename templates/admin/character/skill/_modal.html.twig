{# templates\admin\character\skill\_modal.html.twig #}
{% trans_default_domain 'forms' %}
<!-- Modal {{ title }} -->
<div class="modal fade" id="{{ title }}" tabindex="-1" role="dialog" aria-labelledby="{{ title }}Label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="{{ title }}Label">{{ skill.name }} [{{ skill.abbreviation }}]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="row mb-4">

                    <div class="col-12 small text-justify">
                    [ 
                        {% for key, type in constant('TYPE', skill) %}
                            {% if skill.type == key %}
                                {{ type|trans }}
                            {% endif %}
                        {% endfor %}    
                    ]<br />
                    {{ skill.description|nl2br }}
                    </div>

                </div>

            </div>

            <div class="modal-header">
                <small>Calcul : {{ skill.getCalcul() }}</small>
            </div>

        </div>
    </div>
</div>