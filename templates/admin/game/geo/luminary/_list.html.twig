{# templates\admin\game\geo\luminary\_list.html.twig #}
<div class="row">
    <div class="col-12">
    
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="text-bold w-25">Nom</th>
                    
                    <th class="text-bold">Type</th>
                    
                    <th class="text-bold text-center">Obsol√®te</th>

                    <th class="text-bold text-center w-10">Action</th>
                <tr>
            </thead>
            <tbody>
            {% for luminary in luminaries %}
                <tr>
                    <td class="w-25">{{ luminary.name }}</td>
                    
                    <td>{{ luminary.type.name }}</td>

                    <td class="text-center">
                        <a href="{{ path('admin_game_geo_luminary_obsolete', {id: luminary.id}) }}">
                            {% if luminary.obsolete %}
                            <i class="far fa-check-square text-danger" title="Oui"></i>
                            {% else %}
                            <i class="far fa-square text-success" title="Non"></i>
                            {% endif %}
                        </a>
                    </td>

                    <td class="text-center w-10">

                        {% include "admin/game/geo/luminary/_action.html.twig" %}

                    </td>
                <tr>
            {% else %}
                <tr><td colspan="7" class="text-center">- Aucun enregistrement -</td></tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
</div>