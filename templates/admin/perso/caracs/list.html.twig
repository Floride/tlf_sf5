{# templates\admin\perso\caracs\list.html.twig #}
{% extends 'admin/layout.html.twig' %}

{% block body_content %}

    {% include "admin/elements/_header.html.twig" with {
            'h_titre':'Personnage : Caractéristiques',
            'h_path_retour':'admin_index'
        }
    %}

    {% include "admin/elements/_alert.html.twig" %}
 
    {% set sh_description = "Les caractérisques d'un personnage, dans Troopers, la Légion Fédérale (TLF), sont une constituante de base d'un personnage. Elles constituent le \"matériaux brut\", la base de tout personnage : son corps, ce qu'il en a fait, se qui le rend unique. C'est en quelque sorte sa prédisposition génétique et l'amélioration dûe à l'acquis, l'entrainement.<br />Les caractéristiques sont donc, une représentation chiffrée de ce qui fait l'essence du personnage." %}
    
    {% include "admin/elements/_sub_header.html.twig" with {
            'sh_description':sh_description,
            'sh_lien':'perso_caracs_new',
            'sh_btn_txt':'Nouvelle Caractéristique'
        }
    %}
    
    {% include "admin/elements/_affichage.html.twig" with {'route': 'perso_caracs_list'} %}

    {% if affichage == 'vignette' %}
    
        {% include "admin/perso/caracs/_vignette.html.twig" %}

    {% else %}
    
        {% include "admin/perso/caracs/_liste.html.twig" %}

    {% endif %}

{% endblock %}