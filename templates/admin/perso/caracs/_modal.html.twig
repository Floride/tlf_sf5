{# templates\admin\perso\caracs\_modal.html.twig #}
<!-- Modal {{ title }} -->
<div class="modal fade" id="{{ title }}" tabindex="-1" role="dialog" aria-labelledby="{{ title }}Label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="{{ title }}Label">{{ carac.nom }} [{{ carac.abreviation }}]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="row mb-4">

                    <div class="col-12 small text-justify">
                    [ Caractéristique 
                    {% if carac.type == 1 %}
                        Physique
                    {% elseif carac.type == 2 %}
                        Mentale
                    {% else %}
                        Non précisée
                    {% endif %}
                    ]<br />
                    {{ carac.description|nl2br }}
                    </div>

                </div>
                
                <div class="row">

                    <div class="col-4">Minimum : <strong>{{ carac.valeurMin }}</strong></div>
                    
                    <div class="col-4">Moyenne : <strong>{{ carac.valeurMoyenne }}</strong></div>
                    
                    <div class="col-4">Maximum : <strong>{{ carac.valeurMax }}</strong></div>

                </div>

            </div>

            <div class="modal-footer">
                <small>
                    Compétence(s) associée(s): <br />
                    {% for comp in carac.getCompsAsso() %}
                        <a href="{{ path('perso_comps_edit', {id: comp.id}) }}">{{ comp.nom }}</a>,
                    {% else %}
                        <strong>aucune</strong>
                    {% endfor %}
                </small>
            </div>

        </div>
    </div>
</div>